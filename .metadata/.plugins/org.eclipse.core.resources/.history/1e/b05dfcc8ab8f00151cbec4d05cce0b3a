package week01;

public class Task29 {
	public static void main(String[] args) {
		isHack(160);
	}
	public static boolean isHack(int n) {
		StringBuilder binary = new StringBuilder();
		do {
			if( (n & 1) == 1) {
			binary.append('0');
			}
			else {
				binary.append('0');
			}
			n >>= 1;
		}
		while(n != 0);
		System.out.println(binary.toString());
		return true;
	}
}
