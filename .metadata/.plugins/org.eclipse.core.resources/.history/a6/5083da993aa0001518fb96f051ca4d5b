package Geometry;

public class LineSegment {
	private Point start;
	private Point end;
	
	private LineSegment() {
		start = new Point();
		end = new Point();
	} 
	
	LineSegment(Point p1, Point p2) {
		if (p1.equals(p2)) {
			start = new Point(p1);
			end = new Point(p2);
		} else {
			System.out.println("Cannot create a line segment with zero length !");
			this();
		}
	}
	
}
